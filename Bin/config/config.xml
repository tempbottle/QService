<?xml version="1.0" encoding="utf-8" ?>
<QServer>
    <LocalServer>
        <!--服务器节点-->
        <ServerInfo>
		    <!--服务器ID(最大1024)-->
			<ServerID>1</ServerID>
            <!--绑定的IP-->
            <BindIP>0.0.0.0</BindIP>
            <!--绑定端口-->
            <Port>15000</Port>
            <!--线程数-->
            <ThreadNum>1</ThreadNum>
            <!--定时器触发间隔时间 0 不触发(毫秒)-->
            <Timer>50</Timer>
            <!--脚本文件-->
            <Script>Lua/Main.lua</Script>			
            <!--连接到其他服务器 可以多个节点--> 
            <ServerLinker>			
                <LinkerName>accountsv</LinkerName>
				<Type>0</Type>
                <IP>127.0.0.1</IP>
                <Port>15001</Port>
            </ServerLinker> 
			<ServerLinker>			
                <LinkerName>dbsv</LinkerName>
				<Type>4</Type>
                <IP>127.0.0.1</IP>
                <Port>15005</Port>
            </ServerLinker>
        </ServerInfo>
    </LocalServer>

    <!-- 日志参数配置 --> 
    <LogConfig>
		<!--日志文件名称-->
		<LogName>Game.log</LogName>
	    <!--日志文件大小限制-->
        <MaxSize>5242880</MaxSize>
        <!--LOGLV_NOLOG  = 0,
            LOGLV_ERROR  = 300, 
            LOGLV_WARN   = 400,
            LOGLV_INFO   = 500,
            LOGLV_DEBUG  = 600,
        -->
		<!--日志级别限制-->
        <Priority>600</Priority>
    </LogConfig>
</QServer>
