<?xml version="1.0" encoding="utf-8" ?>
<QServer>
    <!--服务器节点-->
    <ServerInfo>
		<!--服务器ID(最大1024)-->
        <ServerID>1</ServerID>
		<!--服务器类型-->
        <Type>3</Type>
        <!--线程数-->
        <ThreadNum>1</ThreadNum>
        <!--定时器触发间隔时间 0 不触发(毫秒)-->
        <Timer>50</Timer>
        <!--脚本文件-->
        <Script>Lua/Main.lua</Script>
            
        <!--tcp 绑定Ip 端口-->
        <TCP>
            <BindIP>0.0.0.0</BindIP>
            <Port>15000</Port>
        </TCP>
        <!--Http 绑定Ip 端口-->
        <Http>
            <BindIP>0.0.0.0</BindIP>
            <Port>8080</Port>
        </Http>
        <!--WebSocket 绑定Ip 端口-->
        <WebSock>
            <BindIP>0.0.0.0</BindIP>
            <Port>8081</Port>
        </WebSock>
    </ServerInfo>
    
    <!--连接到其他服务器-->
    <LinkOther>
        <Name>accounsv</Name>
        <IP>127.0.0.1</IP>
        <Port>15001</Port>
    </LinkOther>

    <!-- 文本日志参数配置 --> 
    <TxtLog>
		<!--日志文件名称-->
		<LogName>Game.log</LogName>
	    <!--日志文件大小限制-->
        <MaxSize>5242880</MaxSize>
        <!--LOGLV_NOLOG  = 0,
            LOGLV_ERROR  = 300, 
            LOGLV_WARN   = 400,
            LOGLV_INFO   = 500,
            LOGLV_DEBUG  = 600,
        -->
		<!--日志级别限制-->
        <Priority>600</Priority>
    </TxtLog>
    
    <!-- mysql日志参数配置,不需要则屏蔽该节点。log表的生成sql语句在log.sql中 --> 
    <DBLog>
		<Ip>127.0.0.1</Ip>
        <Port>3306</Port>
        <User>root</User>
        <PWD></PWD>
        <DB>logtest</DB>
    </DBLog>
</QServer>
